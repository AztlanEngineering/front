{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl":"src",
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": false,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es2022", "dom"],
    "module":"NodeNext",
    "moduleResolution": "nodenext",
    "noImplicitAny": false,
    "outDir": "dist",
    "skipLibCheck": true,
    "target": "ES2022"
  },
  "include":["src", "stories"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
