{
  "name": "@aztlan/base-styles",
  "version": "0.0.19",
  "description": "",
  "main": "src/main.scss",
  "scripts": {
    "compile": "sass src/main.scss dist/main.css -I ../../node_modules -I ./node_modules -c && npm run filesize -- dist/main.css",
    "minify": "postcss dist/main.css -o dist/main.min.css && npm run filesize -- dist/main.min.css",
    "build": "npm run compile && npm run minify",
    "ebuild": "exit 0",
    "prepare": "npm run build",
    "filesize": "du --apparent-size -sh ${1}",
    "lint:stylelint": "stylelint src/**/*.scss --rd --rdd --risd --color --formatter verbose",
    "lint:stylelint:fix": "npm run lint:stylelint -- --fix"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@aztlan/postcss-config": "^0.1.1",
    "@aztlan/stylelint-config": "^0.2.0-alpha.0",
    "cssnano": "^6.0.1",
    "postcss-cli": "^10.1.0",
    "postcss-preset-env": "^9.3.0",
    "sass": "^1.69.5"
  },
  "dependencies": {
    "@aztlan/grid": "^0.1.1",
    "@aztlan/swatch": "^0.1.1"
  }
}
